<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header with date and user profile -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">


        <!-- Date and title -->
        <TextView
            android:id="@+id/textView_dateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday, 24th August,2020\n Your Daily Activity"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1" />


    </LinearLayout>

    <!-- Step count circular progress -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerLayout"
        android:layout_marginTop="32dp"
        android:id="@+id/frameLayout">

        <!-- Circular progress background -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/circular_background" />

        <!-- Step count text -->
        <TextView
            android:id="@+id/textView_stepCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="10,189\nStep Count"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <!-- Step goal text -->
        <TextView
            android:id="@+id/textView_stepGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Step Goal: 20,000"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="32dp" />
    </FrameLayout>

    <!-- Bottom panel with distance, time and heart rate -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/frameLayout"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="false"
        android:background="@drawable/group_border"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView_distanceRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7.76 Km\nDistance"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="19sp"/>

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2.40\nTime"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textView_calories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="300\nKcal"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:gravity="center" />
    </LinearLayout>
</RelativeLayout>
